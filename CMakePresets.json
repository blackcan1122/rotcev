{
    "version": 3,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with full debugging info",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "profile",
            "displayName": "Profile",
            "description": "Profiling build with gprof support",
            "binaryDir": "${sourceDir}/build/profile",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Profile"
            }
        },
        {
            "name": "testing",
            "displayName": "Testing",
            "description": "Testing build with coverage",
            "binaryDir": "${sourceDir}/build/testing",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Testing"
            }
        },
        {
            "name": "development",
            "displayName": "Development",
            "description": "Development build with extra warnings",
            "binaryDir": "${sourceDir}/build/development",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Development"
            }
        },
        {
            "name": "sanitize",
