        },
        {
            "name": "minsize",
            "displayName": "Minimum Size",
            "description": "Size-optimized build",
            "binaryDir": "${sourceDir}/build/minsize",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSize"
            }
        }
